@model RNDProcessing
@{
    ViewBag.Title = "ProcessingMaterialList";
}

<div class="panel-heading">Processing Material List</div>
<div class="panel-body">
    <div id="searchDiv" class="container">
        <div class="row">
            <div class="col-md-3">
                <button id="btnAdd" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Create New Process</button>
            </div>
            <div class="col-md-3 pull-right">
                <button id="btnBack" onclick="window.history.back();" class="btn btn-primary btn-large"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="searchWorkStudyNumber" class="cols-sm-2 control-label">Work Study Number</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-book" aria-hidden="true"></i></span>
                        <input type="text" value="@Model.WorkStudyID" id="searchWorkStudyNumber" name="searchWorkStudyNumber" class="form-control" placeholder="Enter Work Study Number" />
                        <input type="hidden" name="WorkStudyID" id="WorkStudyID" value="@Model.WorkStudyID" />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchMillLotNo" class="cols-sm-2 control-label">Mill Lot Number</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            <input type="text" value="" id="searchMillLotNo" name="searchMillLotNo" class="form-control" placeholder="Enter Mill Lot Number" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchHTLogID" class="cols-sm-2 control-label">HT Log ID</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            <input type="text" value="" id="searchHTLogID" name="searchHTLogID" class="form-control" placeholder="Enter HT Log ID" />

                            @*<input type="text" value="@Model.HTLogID" id="searchHTLogID" name="searchHTLogID" class="form-control" placeholder="Enter HT Log ID" />
                            <input type="hidden" name="HTLogID" id="HTLogID" value="@Model.HTLogID" />*@
                        </div>
                    </div>
                </div>
             </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchAgeLotID" class="cols-sm-2 control-label">Age Lot ID</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            <input type="text" value="" id="searchAgeLotID" name="searchAgeLotID" class="form-control" placeholder="Enter Age Lot ID" />

                            @*<input type="text" value="@Model.AgeLotID" id="searchAgeLotID" name="searchAgeLotID" class="form-control" placeholder="Enter Age Lot ID" />
                        <input type="hidden" name="AgeLotID" id="AgeLotID" value="@Model.AgeLotID" />*@
                        </div>
                    </div>
                </div>
            </div>         
        </div>

       
        @*new row*@
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="" class="cols-sm-2 control-label"></label>
                    <div class="cols-sm-10">
                        <button id="btnSearch" class="btn btn-primary btn-large"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
                        &nbsp;&nbsp;&nbsp;
                        <button id="btnClear" class="btn btn-primary btn-large"><i class="fa fa-times" aria-hidden="true"></i> Clear</button>
                    </div>
                </div>

            </div>

        </div>
    </div>
    @{Html.RenderPartial("_Repeater", "ProcessingMaterialRepeater");}
</div>

@section scripts{
    @Scripts.Render("~/bundles/ProcessingMaterial")
    <script>
        $(document).ready(function () {
            LoadGrid("ProcessingMaterialRepeater");
        });
    </script>
}

